    <bean id="tipoIDController" class="edu.unapec.nomina.controllers.TipoIngresoDeduccionController">
        <constructor-arg name="repositorio" ref="repoTipoID"/>
    </bean>
    -->
    
    <bean id="empleadoController" class="edu.unapec.nomina.controllers.EmpleadoController" >
        <!--<constructor-arg index="0" name="repositorio" ref="repoEmpleados"/>-->
        <!--<constructor-arg index="1" name="repoPuestos" ref="repoPuestos" />-->
        <!--<constructor-arg index="2" name="repoDepartamentos" ref="repoDepartamentos" />-->
        <!--<property name="personaDao" ref="personaDao" />-->
    </bean>
    
    <!-- Controladores -->

</beans>